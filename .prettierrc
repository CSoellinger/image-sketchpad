{
    "printWidth": 120,
    "singleQuote": true,
    "bracketSpacing": true,
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "parser": "babel-ts",
                "experimentalBabelParserPluginsList": [
                    "typescript"
                ],
                "plugins": [
                    "prettier-plugin-organize-imports",
                    "@homer0/prettier-plugin-jsdoc"
                ]
            }
        },
        {
            "files": "package.json",
            "options": {
                "plugins": [
                    "prettier-plugin-packagejson"
                ]
            }
        },
        {
            "files": "tsconfig.json",
            "options": {
                "plugins": [
                    "@tsjson/prettier-plugin-tsjson"
                ]
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2,
                "useTabs": false,
                "plugins": [
                    "remark-prettier"
                ]
            }
        }
    ]
}
