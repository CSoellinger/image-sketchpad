{
    "name": "image-sketchpad",
    "version": "1.0.0",
    "description": "Draw on images within desktop and mobile browsers.",
    "keywords": [
        "image",
        "sketchpad",
        "responsive",
        "desktop",
        "mobile",
        "mark",
        "canvas",
        "html5"
    ],
    "homepage": "https://github.com/CSoellinger/image-sketchpad",
    "bugs": {
        "url": "https://github.com/CSoellinger/image-sketchpad/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/CSoellinger/image-sketchpad.git"
    },
    "license": "MIT",
    "author": {
        "name": "CSoellinger",
        "email": "christopher.soellinger@gmail.com",
        "url": "https://github.com/CSoellinger"
    },
    "main": "dist/image-sketchpad.cjs.js",
    "module": "dist/image-sketchpad.esm.js",
    "browser": "dist/image-sketchpad.js",
    "types": "types/index.d.ts",
    "files": [
        "dist",
        "types"
    ],
    "scripts": {
        "prebuild": "npm run lint && npm run clean",
        "build": "npm run build:esnext && npm run build:js",
        "prebuild:docs": "npm run lint && npm run clean:docs",
        "build:docs": "typedoc",
        "build:esnext": "tsc",
        "build:js": "rollup -c",
        "build:types": "tsc --emitDeclarationOnly",
        "clean": "eliminate ./dist ./types",
        "clean:docs": "eliminate ./docs",
        "lint": "eslint --ext '.js,.ts' .",
        "lint:fix": "npm run lint -- --fix",
        "serve": "serve dist & npm run watch",
        "start": "babel-node -x \".ts\" src/index.ts",
        "test": "jest",
        "type-check": "tsc --noEmit",
        "prewatch": "npm run clean",
        "watch": "tsc -w & rollup -c -w",
        "watch:docs": "typedoc --watch",
        "watch:type-check": "npm run type-check -- --watch"
    },
    "dependencies": {
        "merge-images": "^2.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/node": "^7.14.7",
        "@babel/plugin-proposal-class-properties": "^7.14.5",
        "@babel/plugin-transform-runtime": "^7.14.5",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-typescript": "^7.14.5",
        "@homer0/prettier-plugin-jsdoc": "^4.0.0",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-html": "^0.2.3",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@rollup/plugin-replace": "^2.4.2",
        "@tsjson/prettier-plugin-tsjson": "^1.0.8",
        "@types/jest": "^26.0.23",
        "@types/merge-images": "^1.2.0",
        "@typescript-eslint/eslint-plugin": "^4.28.1",
        "@typescript-eslint/parser": "^4.28.1",
        "canvas": "^2.8.0",
        "eliminate": "^1.1.2",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-array-func": "^3.1.7",
        "eslint-plugin-editorconfig": "^3.0.2",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-jest-formatting": "^3.0.0",
        "eslint-plugin-jsdoc": "^35.4.1",
        "eslint-plugin-prettier": "3.4.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-radar": "^0.2.1",
        "eslint-plugin-regexp": "^0.12.1",
        "eslint-plugin-tsdoc": "^0.2.14",
        "jest": "^27.0.6",
        "jest-canvas-mock": "^2.3.1",
        "prettier": "^2.3.2",
        "prettier-plugin-packagejson": "^2.2.11",
        "remark-prettier": "^1.2.0",
        "rollup": "^2.52.6",
        "rollup-plugin-terser": "^7.0.2",
        "serve": "^12.0.0",
        "ts-jest": "^27.0.3",
        "tslib": "^2.3.0",
        "typedoc": "^0.21.2",
        "typescript": "^4.3.5"
    },
    "publishConfig": {
        "access": "public"
    },
    "esnext": "dist/esnext/index.js",
    "readme": "README.md"
}
