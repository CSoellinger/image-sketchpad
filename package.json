{
  "name": "image-sketchpad",
  "version": "1.0.0",
  "description": "Draw on images within desktop and mobile browsers.",
  "keywords": [
    "image",
    "sketchpad",
    "responsive",
    "desktop",
    "mobile",
    "mark",
    "canvas",
    "html5"
  ],
  "homepage": "https://github.com/CSoellinger/image-sketchpad",
  "bugs": {
    "url": "https://github.com/CSoellinger/image-sketchpad/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CSoellinger/image-sketchpad.git"
  },
  "license": "MIT",
  "author": {
    "name": "CSoellinger",
    "email": "christopher.soellinger@gmail.com",
    "url": "https://github.com/CSoellinger"
  },
  "main": "dist/image-sketchpad.cjs.js",
  "module": "dist/image-sketchpad.esm.js",
  "browser": "dist/image-sketchpad.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "prebuild": "npm run lint && npm run clean",
    "prebuild:docs": "npm run lint && npm run clean:docs",
    "build": "npm run build:esnext && npm run build:js",
    "build:esnext": "tsc",
    "build:js": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "build:docs": "typedoc",
    "clean": "eliminate ./dist ./types",
    "clean:docs": "eliminate ./docs",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "serve": "serve dist & npm run watch",
    "start": "babel-node -x \".ts\" src/index.ts",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "prewatch": "npm run clean",
    "watch": "tsc -w & rollup -c -w",
    "watch:docs": "typedoc --watch",
    "watch:type-check": "npm run type-check -- --watch"
  },
  "dependencies": {
    "merge-images": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-html": "^0.2.3",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@types/jest": "^26.0.23",
    "@types/jquery": "^3.5.5",
    "@types/merge-images": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "babel-jest": "^27.0.2",
    "canvas": "^2.8.0",
    "eliminate": "^1.1.2",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.0.4",
    "jest-canvas-mock": "^2.3.1",
    "jest-electron": "^0.1.11",
    "jest-puppeteer": "^5.0.4",
    "prettier": "^2.3.1",
    "rollup": "^2.52.1",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^12.0.0",
    "typedoc": "^0.20.37",
    "typescript": "^4.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "esnext": "dist/esnext/index.js",
  "readme": "README.md"
}
